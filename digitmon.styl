normalize-css()
.Actions
    absolute bottom 0 left 0
    width 100%
    display flex
    
    background grey
    &Observation
        background deepskyblue
        background black
    &Mutation
    &Observation
        flex-grow 1
        display flex
        flex-wrap wrap
    
.Action
    padding 20px
    

.State
    display flex
    align-items center
    justify-content center
    min-height 50vh
    &-circle
        size 50vw
        max-width 300px
        max-height 300px
        background grey
        border-radius 50%
        

    
.overlays
    padding 20px
    font-size 32px
