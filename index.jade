head
    link(href='https://fonts.googleapis.com/css?family=Roboto+Mono:400,100,700' rel='stylesheet' type='text/css')
body
    header
        .title gitchallenge
        button.createLevel
    .header-spacer
    +levelSelection
    +state
    +actionsWrap

template(name='levelSelection')
    .Levels
        .Level
            .Level-title Initialize this!
            .Level-Briefing Initialize a git repo and commit an existing codebase.
        .Level
            .Level-title Clean Pull
            .Level-Briefing Commit pending changes and pull from remote.

template(name='state')
    +monster
    +overlays


template(name='actionsWrap')
    .Actions
        span.title git
        input(type='text').Action-Parameters
        +actionsObservation
        +actionsMutation
        +actionsParameters
    
template(name='actionsObservation')
    .ActionsObservation
        each action in actions
            button(data-actiontype='{{action.type}}').Action {{action.type}}

template(name='actionsMutation')
    .ActionsMutation
        each action in actions
            button(data-actiontype='{{action.type}}').Action {{action.type}}
            .Action-help {{action.description}}
        button.Action {{action}}
        button.Action {{action}}

template(name='actionsParameters')

template(name='monster')
    .State
        .State-circle

template(name='overlays')
    .overlays
        +overlayStatus
        +overlayDiff

template(name='overlayDiff')
    
template(name='overlayStatus')
    p {{status}} hey

