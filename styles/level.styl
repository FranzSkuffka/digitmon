$button
    padding 10px
    font-family inherit
.Level
    transition 1.3s ease-out-quart
    transform scale(0.8) 
    opacity 0
    pointer-events none
    height 100vh
    &.is-visible
        transform scale(1)
        opacity 1
        pointer-events all
    &.is-visible &-info
        transform scale(0.5)
        transition transform 0.3s ease-out
        transition-delay 2s
    &-info
        transform scale 1
        absolute top 100px left 10px
        width 30vw
        max-width 300px
        &:hover
            transition-delay 0 !important
            transform scale(1) !important
        .Level-briefing
            background white
        .Level-title
            font-size 30px
        
.Actions
    &-prefix
        absolute top -10px left 10px
        line-height 20px

    background blue
    fixed bottom 0 left 0
    width 100%
    display flex

    &Observation
        background deepskyblue
    &Mutation
    &Observation
        flex-grow 1
        display flex
        flex-wrap wrap
    
.Action
    background transparent
    color white
    &-parameters
        absolute top 0 left 0
        height 100%
        width 100%
        display none
        &.is-visible
            display flex
    &-parameterType
        padding 20px
    &:hover
        background black
    padding 20px
    &:hover + &-help
        display block
    &-help
        display none
        absolute top -60px0 left 0
        box-sizing border-box
        padding 20px
        height 60px
        line-height 20px
        width 100%
        overflow visible
    

.State
    display flex
    align-items center
    justify-content center
    min-height 50vh
    &-circle
        size 50vw
        max-width 300px
        max-height 300px
        background grey
        border-radius 50%
