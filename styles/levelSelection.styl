.LevelSummaries
    absolute top 0 left 0
    height 100vh
    background linear-gradient(90deg, #606c88 10%, #3f4c6b 90%)
    flex-wrap wrap
    align-items flex-start
    align-content flex-start
    justify-content center
    display none
    &.is-visible
        display flex

.LevelSummary
    background white
    padding 20px
    margin 30px
    float left
    width 300px
    flex-shrink 0
    box-sizing border-box
    border-radius 3px
    &-title
        font-weight 800
        font-size 40px
        background #888
        margin-bottom 20px
    &:hover
        background black
        color white
